<% if @cart.count <= 0 %>
	You have nothing in your cart.
<% else %>
	You have <%= pluralize(@cart.count, "item") %> in your cart.

	<button id="toggle_cart_button">View</button>

<div id="cart_detail">
	<% @cart.each do |key, value| %>
		<div>
			<%= value[0] %> - <%= value[1] %> <%= number_to_currency(value[2]) %>
		
		</div>
	<% end %>
	

	<hr/>
					
	<div =id"cart_total" style="font-weight:bold;text-align:right">Total: <%= number_to_currency(@sum) %>
		<br>
		<%= link_to "Place Order", new_customer_path %>
	</div>
</div>

<% end %>